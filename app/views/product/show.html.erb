<h2><%= @product.name %> <h1>
<h4><%= @product.description %> <h4>
<h3><%= @product.price %> <h3>
<img src = "<%= @product.image %>" alt = "img"/>

<ul>
  <li><%= link_to "Edit", edit_product_path(@product) %></li>
  <li>
  <%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
  </li>
</ul>
