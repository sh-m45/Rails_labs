<h1>Products List</h1>

<a href="/product/new">create product</a>

<% @products.each do |products| %>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= products.name %></td>
                <td><%= products.description %></td>
                <td><%= products.price %></td>
                <td>
                 <a href="/product/<%= products.id %>">Show</a>
                 <a href="/product/<%= products.id %>/edit">Edit</a>
                </td>
            </tr>
        </tbody>
    </table>
    
<% end %>

